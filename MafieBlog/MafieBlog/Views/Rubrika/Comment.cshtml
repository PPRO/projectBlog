@model DataAccess.Model.BlogComment
@{
    ViewBag.Title = "Comment";
	Layout = null;
}

<a name="comments"></a>

<div class="panel panel-primary">

	<div class="panel-heading">
		<h3 class="panel-title">Přidat komentář</h3>
	</div>

	<div class="panel-body">
		@Html.ValidationSummary("zkus to ynovu")

		@using( Html.BeginForm( "AddComment", "Rubrika", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" } ) )
			{
			@ViewBag.IdArticle

		

				<div class="form-group">
					<label class="col-sm-3 control-label"><span class="asterisk">*</span>Jméno:</label>
					<div class="col-sm-8">
						@Html.TextBoxFor(x => x.Name, new {@class = "form-control"})
						@Html.ValidationMessageFor(x => x.Name)
					</div>
				</div>



			<div class="form-group">
				<label class="col-sm-3 control-label"><span class="asterisk">*</span>E-mail</label>
				<div class="col-sm-8">
					@Html.TextBoxFor( x => x.Email, new { @class = "form-control" } )
					@Html.ValidationMessageFor( x => x.Email )
				</div>
			</div>

			<div class="form-group">
				<label class="col-sm-3 control-label"><span class="asterisk">*</span>Zpráva:</label>
				<div class="col-sm-8">
					@Html.TextAreaFor( x => x.Comment, new { @class = "form-control" } )
				</div>
			</div>


			<div class="form-group">
				<div class="col-sm-3"></div>
				<div class="col-sm-8">
					<input type="submit" name="submit" id="submit" value="Odeslat" class="btn btn-primary button" />
				</div>
			</div>

			}
	</div>
</div>
