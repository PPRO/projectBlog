@using DataAccess.Model
@model Article

@{
    ViewBag.Title = "ArticleDetail";

}
@section head{
	<meta name="description" content="@Model.Description">
	<meta name="robots" content="all">
	<title>@Model.Title</title>
}
<main class="col-xs-12 col-sm-12 col-md-8 col-md-push-4 col-lg-9 col-lg-push-3">

	<div id="mainContent">
		<h1>@Model.Title</h1>
		<p>@Html.Raw( Model.Text )</p>

		<p class="podpis"><strong>Autor: @Model.User.Name @Model.User.Surname </strong></p>
	</div>

	@{ Html.RenderAction( "Comment", "Rubrika", Model.Id );}

	@if (Model.CountComment > 0)
	{
		
		
			{Html.RenderAction( "ShowComment", "Rubrika", Model.Id );}
		
	}
</main>
