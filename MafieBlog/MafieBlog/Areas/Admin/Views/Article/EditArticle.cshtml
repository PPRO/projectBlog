@model DataAccess.Model.Article
@{
    ViewBag.Title = "EditArticle";
}
<main class="col-xs-12 col-sm-12 col-md-8 col-md-push-4 col-lg-9 col-lg-push-3">

	<h1>edit Uzivatele</h1>

	@Html.ValidationSummary()

	@using( Html.BeginForm( "UpdateArticle", "Article", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" } ) )
	{

		@Html.HiddenFor( x => x.PostDate )
		@Html.HiddenFor( x => x.Id )
		@Html.HiddenFor( x => x.ImageName )
		
		<form class="form-horizontal">

			<div class="form-group">
				<label class="col-sm-2 control-label">Název</label>
				<div class="col-sm-10">
					@Html.TextBoxFor( x => x.Title, new { @class = "form-control" } )
					@Html.ValidationMessageFor( x => x.Title )
				</div>
			</div>

			<div class="form-group">
				<label class="col-sm-2 control-label">Popis</label>
				<div class="col-sm-10">
					@Html.TextAreaFor( x => x.Description, new { @class = "form-control formatedtext" } )
					@Html.ValidationMessageFor(x => x.Description)

				</div>
			</div>

			<div class="form-group">
				<label class="col-sm-2 control-label">Text článku</label>
				<div class="col-sm-10">
					@Html.TextAreaFor( x => x.Text, new { @class = "form-control formatedtext "} )
					@Html.ValidationMessageFor( x => x.Text )
				</div>
			</div>

			<div class="form-group">
				<label class="col-sm-2 control-label">Obrazek</label>
				<div class="col-sm-10">
					<input type="file" name="picture" />
					@if( !string.IsNullOrEmpty( Model.ImageName ) )
					{
						<img src="@Url.Content("~/uploads/articleImage/" + Model.ImageName)" />
					}
				</div>
			</div>

		
			<div class="form-group">
				<label class="col-sm-2 control-label">Rubrika</label>
				<div class="col-sm-10">
					@Html.DropDownList( "categoryId", new SelectList( ViewBag.Categories, "Id", "Name", Model.Category.Id ), new { @class = "form-control" } )

				</div>
			</div>



			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<button type="submit" class="btn btn-primary">Editovat</button>
				</div>
			</div>
		</form>
	}
</main>