@model DataAccess.Model.Mail
@{
    ViewBag.Title = "Contact";
}

@section metadata
{
    <meta name="description" content="David Kováč kontakt, adresa, email">
    <meta name="keywords" content="david kováč, osobní stránky">
    <meta name="author" content="David Kováč, email = david.kovac@uhk.cz">
}

@section Title
{
    Kontakt - David Kováč
}

<div class="row_8">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 gmap">
                <div class="map"><iframe src="https://www.google.cz/maps/place/R%C3%BDchorsk%C3%A9+s%C3%ADdl.,+542+24+Svoboda+nad+%C3%9Apou/&#64;50.6344207,15.811705,17z/data=!3m1!4b1!4m2!3m1!1s0x470eed6d695b321b:0x35caf00e72a99bf6"></iframe></div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-4 address">
                <h2>@Resource.Address</h2>
                <address>
                    <div class="info">
                        <strong>@Resource.Town, @Resource.State</strong>
                        <p>@Resource.Email: @Resource.EmailAddress</p>
                    </div>
                </address>
            </div>


            @if ( TempData["message-unsuccess"] != null )
            {
                <div class="alert alert-warning alert-dismissible fade in" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
                    @TempData["message-unsuccess"]
                </div>
            }
            <div class="col-lg-8 col-md-8 col-sm-8 address">
                @using ( Html.BeginForm("SendMessage", "Home", FormMethod.Post, new
{
    @class = "form-horizontal",
    enctype = "multipart/form-data"
}) )
                {
                    <h2>@Resource.ContactForm</h2>
    <form id="contact-form" class="contact-form">

        <div class="coll-1">
            <label class="txt-form name">Jméno</label>
            <div class="error">
                @Html.TextBoxFor(x => x.Name, new
               {
                   @class = "form-control"
               })
                @Html.ValidationMessageFor(x => x.Name)
            </div>
        </div>

        <div class="coll-2">
            <label class="txt-form name">Email</label>
            <div class="error">
                @Html.TextBoxFor(x => x.From, new
                {
                    @class = "form-control"
                })
                @Html.ValidationMessageFor(x => x.From)
            </div>
        </div>
        <div class="clear"></div>
        <div>
            <label class="message">Zpráva</label>
            <div class="error">
                @Html.TextAreaFor(x => x.Body, new
               {
                   @class = "form-control"
               })
                @Html.ValidationMessageFor(x => x.Body)
            </div>
        </div>
        <div class="clear"></div>
        <div class="buttons-wrapper clearfix">
            <div>
                <button type="submit" class="btn btn-link2">Poslat zprávu</button>
            </div>
        </div>
    </form>
  }


