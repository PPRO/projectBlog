@model DataAccess.Model.Article
@{
    ViewBag.Title = "EditArticle";
    Layout = "~/Areas/admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>editace článku</h2>

@using ( Html.BeginForm("UpdateArticle", "Administration", FormMethod.Post, new
{
    @class = "form-horizontal",
    enctype = "multipart/form-data"
}) )
{
    @Html.HiddenFor(x => x.Id)
    @Html.HiddenFor(x => x.PosteDate)
    @Html.HiddenFor(x => x.User)

    <form class="form-horizontal">

        <div class="form-group">
            <label class="col-sm-2 control-label">@Resource.Metadata</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.Metadata, new
                {
                    @class = "form-control"
                })
                @Html.ValidationMessageFor(x => x.Metadata)
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">@Resource.Keywords</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.Keywords, new
                {
                    @class = "form-control"
                })
                @Html.ValidationMessageFor(x => x.Keywords)
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">@Resource.TitleA</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.Title, new
               {
                   @class = "form-control"
               })
                @Html.ValidationMessageFor(x => x.Title)
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">@Resource.Description</label>
            <div class="col-sm-10">
                @Html.TextAreaFor(x => x.Description, new
               {
                   @class = "form-control formatedtext"
               })
                @Html.ValidationMessageFor(x => x.Description)
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">@Resource.TextA</label>
            <div class="col-sm-10">
                @Html.TextAreaFor(x => x.Text, new
               {
                   @class = "form-control formatedtext"
               })
                @Html.ValidationMessageFor(x => x.Text)
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">@Resource.Category</label>
            <div class="col-sm-10">
                @Html.DropDownList("categoryId", new SelectList(ViewBag.Category, "Id", "Name"), new
               {
                   @class = "form-control"
               })

            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label">@Resource.Image</label>
            <div class="col-sm-10">
                <input type="file" name="picture"/>
                @if (!string.IsNullOrEmpty(Model.ImageName))
                {
                    <img src="@Url.Content("~/image/articleImage/" + Model.ImageName)"/>
                }
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Editovat</button>
            </div>
        </div>
    </form>
}